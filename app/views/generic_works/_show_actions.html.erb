    <h2 class="non lower">Actions</h2>
    <p>
      <% if Sufia.config.analytics %>
        &nbsp;|&nbsp;
        <%= link_to "Analytics", sufia.stats_generic_work_path(@generic_work), id: 'stats' %>
      <% end %>
      <% if can? :edit, @generic_work %>
          &nbsp;|&nbsp;
          <% if @generic_work.processing? %>
            <%= t('sufia.upload.processing') %>
          <% else %>
            <%= link_to "Edit", sufia.edit_generic_work_path(@generic_work) %>
          <% end %>
      <% end %>
      <% if can?(:create, FeaturedWork) && @generic_work.public? %>
        <% if FeaturedWork.can_create_another? && !@generic_work.featured?%>
          &nbsp;|&nbsp;
          <%= link_to "Feature", sufia.featured_work_path(@generic_work, format: :json), data: {behavior: 'feature'} %>
        <% elsif @generic_work.featured? %>
          &nbsp;|&nbsp;
          Featured
        <% end %>
      <% end %>
    </p>
    <p>Export to:
      <%= link_to 'EndNote', sufia.generic_work_path(@generic_work, format: 'endnote') %>
      &nbsp;|&nbsp;
      <%= link_to 'Zotero', sufia.static_path('zotero'), {id: 'zoteroLink', name: 'zotero', class: 'lightboxLink'} %>
      &nbsp;|&nbsp;
      <%= link_to 'Mendeley', sufia.static_path('mendeley'), {id: 'mendeleyLink', name: 'mendeley', class: 'lightboxLink'} %>
    </p>
    <!-- AddThis Button BEGIN -->
    <div class="addthis_toolbox addthis_default_style">
      <a class="addthis_button_preferred_1"></a>
      <a class="addthis_button_preferred_2"></a>
      <a class="addthis_button_preferred_3"></a>
      <a class="addthis_button_preferred_4"></a>
      <a class="addthis_button_compact"></a>
      <a class="addthis_counter addthis_bubble_style"></a>
    </div>
    <!-- AddThis Button END -->

    <!-- COinS hook for Zotero -->
    <span class="Z3988" title="<%= @generic_work.export_as_openurl_ctx_kev %>"></span>
